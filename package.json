{
  "name": "grepc",
  "displayName": "grepc",
  "description": "Advanced regular expression text decoration.",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stneveadomi/grepc.git"
  },
  "categories": [
    "Programming Languages", "Visualization", "Formatters"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grepc.addRule",
        "title": "Grepc: Create Blank Rule"
      },
      {
        "command": "grepc.addTextRule",
        "title": "Grepc: Create Rule From Selection"
      },
      {
        "command": "grepc.deleteRule",
        "title": "Grepc: Delete Rule"
      },
      {
        "command": "grepc.disableAllRules",
        "title": "Grepc: Disable All Rules"
      },
      {
        "command": "grepc.enableAllRules",
        "title": "Grepc: Enable All Rules"
      },
      {
        "command": "grepc.disableLocalRules",
        "title": "Grepc: Disable Local Workspace Rules"
      },
      {
        "command": "grepc.enableLocalRules",
        "title": "Grepc: Enable Local Workspace Rules"
      },
      {
        "command": "grepc.disableGlobalRules",
        "title": "Grepc: Disable Global Workspace Rules"
      },
      {
        "command": "grepc.enableGlobalRules",
        "title": "Grepc: Enable Global Workspace Rules"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "grepc.addTextRule",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "grepc.addTextRule",
          "group": "grepc",
          "when": "editorHasSelection"
        },
        {
          "command": "grepc.addRule",
          "group": "grepc"
        },
        {
          "command": "grepc.deleteRule",
          "group": "grepc"
        },
        {
          "command": "grepc.disableAllRules",
          "group": "grepc"
        },
        {
          "command": "grepc.enableAllRules",
          "group": "grepc"
        },
        {
          "command": "grepc.disableLocalRules",
          "group": "grepc"
        },
        {
          "command": "grepc.enableLocalRules",
          "group": "grepc"
        },
        {
          "command": "grepc.disableGlobalRules",
          "group": "grepc"
        },
        {
          "command": "grepc.enableGlobalRules",
          "group": "grepc"
        }
      ]
    },
    "views": {
      "grepc-explorer": [
        {
          "type": "webview",
          "id": "grepc.webview.local",
          "name": "Workspace Rules"
        },
        {
          "type": "webview",
          "id": "grepc.webview.global",
          "name": "Global Rules"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "grepc-explorer",
          "title": "Grepc",
          "icon": "media/grecs.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:spa && npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build:spa": "cd webview-ui/grepc-webview && npm ci && npm run build:production",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint ext-src --ext-ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.3",
    "@types/node": "^18.18.13",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/codicons": "^0.0.35",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "debounce": "^2.0.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  }
}
